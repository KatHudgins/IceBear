@model IceBear.Data.EF.Lesson

@{
    ViewBag.Title = "Details";
}

<div class="detail-form">
    <h2 id="form-title">Lesson Details</h2>

    <h4>
        @Html.DisplayFor(model => model.LessonTitle) :
        @Html.DisplayFor(model => model.Cours.CourseName)
    </h4>

    <div class="form-content">

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Introduction)
            </dt>

            <dd>
                <img src="~/Content/assets/img/intro/@Model.Introduction" alt="@Model.Introduction" />
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.VideoURL)
            </dt>

            <dd>
                <iframe id="ytplayer" type="text/html" width="640" height="360" src="@Model.VideoURL" frameborder="0"></iframe>   
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PdfFileName)
            </dt>

            <dd>
                <a href="@Url.Content("~/Content/assets/img/pdf/" + @Model.PdfFileName)" target="_blank"> View Document </a>
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>
        <p class="button " id="detail-edit">
            @Html.ActionLink("Edit", "Edit", new { id = Model.LessonId })
        </p>
    </div>
    <p class="button " id="back-button">
        @Html.ActionLink("Cancel", "Index")
    </p>
</div>
