@model IceBear.Data.EF.CourseCompletion

@{
    ViewBag.Title = "Edit";
}

<div class="edit-form">
    <h2 id="form-title">@ViewBag.Title</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <h4>CourseCompletion</h4>
        </div>

        <div class="form-horizontal form-content">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CourseCompletionId)

            @Html.HiddenFor(model => model.UserId)

            @Html.HiddenFor(model => model.CourseId)

            @Html.HiddenFor(model => model.DateCompleted)

            <div class="form-group">
                <div id="submit-button">
                    <input type="submit" value="Save" class="button" />
                </div>
            </div>
        </div>
    }

    <div class="button " id="back-button">
        @Html.ActionLink("Cancel", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
