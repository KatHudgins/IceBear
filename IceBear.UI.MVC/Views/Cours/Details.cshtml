@model IceBear.Data.EF.Cours

@{
    ViewBag.Title = "Details";
}

<div class="detail-form">
    <h2 id="form-title">Course Overview</h2>

    <h4>
        @Html.DisplayFor(model => model.CourseName)
    </h4>

    <div class="form-content">

        <dl class="dl-horizontal">
            <dd>
                @Html.DisplayFor(model => model.CourseDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

        </dl>
        <p class="button " id="detail-edit">
            @Html.ActionLink("Edit", "Edit", new { id = Model.CourseId })
        </p>
    </div>
    <p class="button " id="back-button">
        @Html.ActionLink("Cancel", "Index")
    </p>
</div>
