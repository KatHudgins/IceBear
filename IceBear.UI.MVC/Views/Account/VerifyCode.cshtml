@model IceBear.UI.MVC.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Enter Verification Code";
}

<div class="create-form">
    <h2 id="form-title">@ViewBag.Title</h2>

    @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.Hidden("provider", @Model.Provider)
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h4>@ViewBag.Status</h4>

        <div class="form-horizontal form-content">
            <div class="form-group">
                @Html.LabelFor(m => m.Code, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberBrowser)
                    @Html.LabelFor(m => m.RememberBrowser)
                </div>
            </div>
            <div class="form-group">
                <div id="submit-button">
                    <input type="submit" value="Create" class="button" />
                </div>
            </div>
        </div>
    }

    <div class="button " id="back-button">
        @Html.ActionLink("Cancel", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
