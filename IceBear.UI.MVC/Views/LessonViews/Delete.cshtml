@model IceBear.Data.EF.LessonView

@{
    ViewBag.Title = "Delete";
}

<div class="delete-form">
    <h2 id="form-title">@ViewBag.Title</h2>

    <h3>Are you sure you want to delete this Lesson view?</h3>

    <div class="form-content">
        <h4>
            @Html.DisplayFor(model => model.Lesson.LessonTitle)
        </h4>

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DateViewed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateViewed)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserDetail.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserDetail.UserName)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="button" />
            </div>
        }
    </div>

    <div class="button " id="back-button">
        @Html.ActionLink("Cancel", "Index")
    </div>

</div>