@model IceBear.Data.EF.LessonView

@{
    ViewBag.Title = "Create";
}

<div class="create-form">
    <h2 id="form-title">Manually : @ViewBag.Title</h2>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>New Viewed Lesson</h4>

        <div class="form-horizontal form-content">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.UserId, "UserId", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LessonId, "LessonId", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("LessonId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LessonId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DateViewed, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.DateViewed, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateViewed, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div id="submit-button">
                    <input type="submit" value="Create" class="button" />
                </div>
            </div>
        </div>
    }

    <div class="button " id="back-button">
        @Html.ActionLink("Cancel", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
