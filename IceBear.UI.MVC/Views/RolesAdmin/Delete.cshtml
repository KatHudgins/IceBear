@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete";
}

<div class="delete-form">
    <h2 id="form-title">@ViewBag.Title</h2>

    <h3>Are you sure you want to delete this Role? </h3>
    <p id="center">****Deleting this Role will remove all users from this role. It will not delete the users.****</p>

    <div class="form-content">

        <h4>
            @Html.DisplayFor(model => model.Name)
        </h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="button" />
            </div>
        }
    </div>

    <div class="button " id="back-button">
        @Html.ActionLink("Cancel", "Index")
    </div>

</div>
